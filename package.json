{
  "name": "@magicmock/root",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Monorepo for Magic Mock - HTTP request recording and replay for development",
  "scripts": {
    "build": "pnpm --filter @magicmock/core build && pnpm --filter @magicmock/unplugin build",
    "dev": "pnpm -r --parallel --filter './packages/*' dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "clean": "pnpm -r --parallel clean",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "eslint": "^9.37.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.0"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0",
    "pnpm": ">=9.0.0"
  }
}
