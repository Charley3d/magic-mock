{
  "name": "@magicmock/root",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Monorepo for Magic Mock - HTTP request recording and replay for development",
  "scripts": {
    "build": "pnpm -r --filter \"./packages/*\" build",
    "dev": "pnpm -r --parallel --filter './packages/*' dev",
    "test": "pnpm -r --filter './packages/*' test",
    "test:e2e": "playwright test",
    "test:e2e:simple-axios": "playwright test --project=simple-axios --ui",
    "test:e2e:simple-jquery": "playwright test --project=simple-jquery",
    "test:e2e:cli-vue": "playwright test --project=cli-vue",
    "test:e2e:vite-vue": "playwright test --project=vite-vue",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "clean": "pnpm -r --parallel clean",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.19.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "~5.9.0",
    "typescript-eslint": "^8.49.0"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a"
}
