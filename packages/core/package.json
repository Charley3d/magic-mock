{
  "name": "@magicmock/core",
  "version": "0.2.0",
  "description": "Core functionality for Magic Mock - HTTP request recording and replay",
  "author": "Charley <charley.makevideo@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client-script.d.ts",
      "import": "./dist/client-script.js",
      "default": "./dist/client-script.js"
    },
    "./standalone": {
      "types": "./dist/standalone/client-script.d.ts",
      "import": "./dist/standalone/client-script.js",
      "default": "./dist/standalone/client-script.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown --minify",
    "dev": "tsdown --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "msw": "^2.12.3"
  },
  "devDependencies": {
    "@types/node": "^22.18.11",
    "tsdown": "^0.16.6",
    "typescript": "~5.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/charley3d/magic-mock.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/charley3d/magic-mock/issues"
  },
  "homepage": "https://github.com/charley3d/magic-mock/tree/main/packages/core#readme",
  "keywords": [
    "mock",
    "msw",
    "http",
    "request",
    "recording",
    "replay",
    "cache"
  ],
  "publishConfig": {
    "access": "public"
  }
}
