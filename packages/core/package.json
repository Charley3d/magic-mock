{
  "name": "@magicmock/core",
  "version": "0.8.0",
  "description": "Core functionality for Magic Mock - HTTP request recording and replay",
  "author": "Charley <charley.makevideo@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js",
      "default": "./dist/config/index.js"
    },
    "./endpoints": {
      "types": "./dist/endpoints/endpoints.d.ts",
      "import": "./dist/endpoints/endpoints.js",
      "default": "./dist/endpoints/endpoints.js"
    },
    "./client": {
      "types": "./dist/client-script.d.ts",
      "import": "./dist/client-script.js",
      "default": "./dist/client-script.js"
    },
    "./standalone": {
      "types": "./dist/standalone/client-script.d.ts",
      "import": "./dist/standalone/client-script.js",
      "default": "./dist/standalone/client-script.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown --minify",
    "dev": "tsdown --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write src/",
    "lint": "eslint . --fix --cache"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^22.18.11",
    "@vitest/coverage-v8": "^2.1.8",
    "jsdom": "^25.0.1",
    "tsdown": "^0.16.6",
    "typescript": "~5.9.0",
    "vitest": "^2.1.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Charley3d/magic-mock.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/Charley3d/magic-mock/issues"
  },
  "homepage": "https://github.com/Charley3d/magic-mock/tree/master/packages/core#readme",
  "keywords": [
    "mock",
    "http",
    "request",
    "recording",
    "replay",
    "cache",
    "fetch",
    "xhr"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "magicmock": "dist/cli.js"
  }
}
