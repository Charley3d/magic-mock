{
  "name": "@magicmock/unplugin",
  "version": "0.0.1",
  "description": "Universal plugin for Magic Mock - works with Vite, Webpack, Rollup, and esbuild",
  "author": "Charley <charley.makevideo@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.js",
      "require": "./dist/vite.cjs"
    },
    "./webpack": {
      "types": "./dist/webpack.d.ts",
      "import": "./dist/webpack.js",
      "require": "./dist/webpack.cjs"
    },
    "./rollup": {
      "types": "./dist/rollup.d.ts",
      "import": "./dist/rollup.js",
      "require": "./dist/rollup.cjs"
    },
    "./esbuild": {
      "types": "./dist/esbuild.d.ts",
      "import": "./dist/esbuild.js",
      "require": "./dist/esbuild.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@magicmock/core": "workspace:*",
    "unplugin": "^2.3.11"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0 || ^7.0.0",
    "webpack": "^4.0.0 || ^5.0.0",
    "rollup": "^3.0.0 || ^4.0.0",
    "esbuild": ">=0.18.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "webpack": {
      "optional": true
    },
    "rollup": {
      "optional": true
    },
    "esbuild": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.18.11",
    "typescript": "~5.9.0",
    "tsdown": "^0.16.6",
    "vite": "^7.1.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/charley3d/magic-mock.git",
    "directory": "packages/unplugin"
  },
  "bugs": {
    "url": "https://github.com/charley3d/magic-mock/issues"
  },
  "homepage": "https://github.com/charley3d/magic-mock/tree/main/packages/unplugin#readme",
  "keywords": [
    "unplugin",
    "vite",
    "vite-plugin",
    "webpack",
    "webpack-plugin",
    "rollup",
    "rollup-plugin",
    "esbuild",
    "esbuild-plugin",
    "mock",
    "msw",
    "http",
    "request",
    "recording",
    "replay"
  ],
  "publishConfig": {
    "access": "public"
  }
}
